# Smart-iLO4 Environment Configuration
# Copy this file to .env and customize the values

# ==============================================
# iLO Connection Settings
# ==============================================
# These can be configured via the web UI as well
ILO_HOST=
ILO_USERNAME=
ILO_PASSWORD=

# ==============================================
# Application Settings
# ==============================================
# Fan control functionality
FAN_CONTROL_ENABLED=true
DEFAULT_FAN_SPEED=50

# Data collection and retention
DATA_RETENTION_HOURS=72
DATA_COLLECTION_INTERVAL=180000

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=info
LOG_TO_FILE=true

# ==============================================
# Security Settings
# ==============================================
# Number of bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# ==============================================
# Development Settings (uncomment for development)
# ==============================================
# NODE_ENV=development
# LOG_LEVEL=debug
